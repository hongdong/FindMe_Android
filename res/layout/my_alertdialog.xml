<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300.0dp"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="15.0dp" >

    <TextView
        android:id="@+id/textv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dp"
        android:layout_marginTop="10.0dp"
        android:textColor="@color/blue" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1.0dp"
        android:layout_marginTop="10.0dp"
        android:background="@color/blue" />

    <LinearLayout
        android:id="@+id/relayout_addview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15.0dp"
        android:layout_marginRight="15.0dp"
        android:layout_marginTop="10.0dp"
        android:gravity="center"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dp"
        android:layout_marginTop="10.0dp"
        android:paddingLeft="15.0dp"
        android:paddingRight="15.0dp" >

        <Button
            android:id="@+id/btn_confir"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/confir_selector"
            android:text="@string/confir"
            android:textColor="@color/white" />

        <View
            android:layout_width="20.0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/cancel_selector"
            android:text="@string/cancel"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>